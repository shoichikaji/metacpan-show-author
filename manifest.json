{
  "manifest_version": 2,
  "name": "metacpan-show-author",
  "description": "Show authors in MetaCPAN recent page",
  "version": "0.0.1",
  "permissions": [
    "tabs",
    "https://metacpan.org/recent/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://metacpan.org/recent/*"],
      "js": ["jquery-2.1.4.min.js", "myscript.js"],
      "run_at": "document_end"
    }
  ]
}
